        <cglib.version>3.3.0</cglib.version>
        <jaxb.version>2.3.1</jaxb.version>              <!-- JAXB supports Java 9 from 2.3.0 on -->
        <activation.version>1.2.0</activation.version>


        <!-- testing support -->
        <testng.version>6.9.10</testng.version>
        <junit.version>4.13</junit.version>
        <jmockit.version>1.22</jmockit.version>

        <!--  benchmarking -->
        <jmh.version>1.25.2</jmh.version>               <!-- http://openjdk.java.net/projects/code-tools/jmh/ -->

        <!-- org.apache.maven.plugins (maven-xxx-plugin) -->
        <antrun.plugin.version>1.8</antrun.plugin.version>
        <compiler.plugin.version>3.8.1</compiler.plugin.version>
        <clean.plugin.version>3.1.0</clean.plugin.version>
        <enforcer.plugin.version>3.0.0-M3</enforcer.plugin.version>
        <ear.plugin.version>3.0.2</ear.plugin.version>
        <ejb.plugin.version>3.0.1</ejb.plugin.version>
        <jar.plugin.version>3.2.0</jar.plugin.version>
        <war.plugin.version>3.2.3</war.plugin.version>
        <javadoc.plugin.version>3.1.1</javadoc.plugin.version>
        <shade.plugin.version>3.2.1</shade.plugin.version>
        <source.plugin.version>3.2.0</source.plugin.version>
        <surefire.plugin.version>2.22.2</surefire.plugin.version>
        <failsafe.plugin.version>2.22.2</failsafe.plugin.version>
        <assembly.plugin.version>3.2.0</assembly.plugin.version>

